{
    "[html]": {
        "editor.renameOnType": true,
    },
    "editor.cursorSmoothCaretAnimation": true,
    "editor.fontFamily": "Cascadia Code PL",
    "editor.fontSize": 16,
    "editor.fontLigatures": true,
    "editor.renderWhitespace": "all",
    "editor.scrollbar.vertical": "visible", // https://github.com/microsoft/vscode/issues/35454
    "editor.scrollbar.horizontal": "visible", // https://github.com/microsoft/vscode/issues/35454
    "editor.suggestSelection": "first",
    "explorer.confirmDelete": false,
    "diffEditor.renderSideBySide": false,
    "git.autofetch": true,
    "mssql.connections": [
        {
            "server": ".\\SQLEXPRESS",
            "database": "Crs",
            "authenticationType": "Integrated",
            "profileName": ".\\SQLEXPRESS - Crs",
            "password": "",
        },
    ],
    "powershell.notebooks.showToggleButton": true,
    "remote.SSH.remotePlatform": {
        "web7.lan.mlginc.com": "windows",
    },
    "terminal.integrated.shell.windows": "${env:ProgramFiles}/PowerShell/7/pwsh.exe",
    "terminal.integrated.shellArgs.windows": ["-NoLogo"],
    "todo-tree.regex.regex": "((//|#|<!--|;|/\\*|^|')\\s*($TAGS)|^\\s*- \\[ \\])",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "workbench.colorCustomizations": {
        // AlienBlood - https://atomcorp.github.io/themes/
        // Note: ansiBlack, ansiBrightBlack, ansiBrightGreen, ansiBrightRed,
        // ansiBrightWhite, ansiGreen, ansiRed, ansiWhite tweaked to improve
        // delta on Hyper
        "terminal.ansiBlack": "#0f1610",
        "terminal.ansiBlue": "#2f6a7f",
        "terminal.ansiBrightBlack": "#333333",
        "terminal.ansiBrightBlue": "#00aae0",
        "terminal.ansiBrightCyan": "#00e0c4",
        "terminal.ansiBrightGreen": "#009900",
        "terminal.ansiBrightMagenta": "#0058e0",
        "terminal.ansiBrightRed": "#cc0000",
        "terminal.ansiBrightWhite": "#ffffff",
        "terminal.ansiBrightYellow": "#bde000",
        "terminal.ansiCyan": "#327f77",
        "terminal.ansiForeground": "#637d75",
        "terminal.ansiGreen": "#006600",
        "terminal.ansiMagenta": "#47587f",
        "terminal.ansiRed": "#660000",
        "terminal.ansiWhite": "#999999",
        "terminal.ansiYellow": "#717f24",
        // "terminal.background": "#0f1610",
    },
    "workbench.colorTheme": "SynthWave '84",
    "workbench.editor.enablePreview": false,
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "none",
}