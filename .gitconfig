[include]
    path = .gitconfig.custom

[alias]
	# http://stackoverflow.com/a/7149602
	addnw = !sh -c 'git diff -U0 -w --no-color "$@" | git apply --cached --ignore-whitespace --unidiff-zero -'

	# https://github.com/so-fancy/diff-so-fancy#raw-patches
	patch = !git --no-pager diff --no-color

[color]
	ui = true

[color "diff"]
	whitespace = red reverse
	meta = yellow
	frag = magenta bold
	func = black bold
	commit = yellow bold
	old = red bold
	new = green bold

# [color "diff-highlight"]
# 	oldNormal = red bold
# 	oldHighlight = red reverse
# 	newNormal = green bold
# 	newHighlight = green reverse

[push]
	# Allows pushing for the first time with just `git push -u` instead of `git push -u origin HEAD`
	default = current

[core]
	editor = subl --new-window --wait

	# Note: diff-so-fancy seems to make `git diff` extremely slow; investigate
	# https://github.com/so-fancy/diff-so-fancy#usage
	pager = diff-so-fancy | less --tabs=4 -RFX

	# Hide ^M (Carriage Return) in diffs
	# https://lostechies.com/keithdahlby/2011/04/06/windows-git-tip-hide-carriage-return-in-diff/
	whitespace = cr-at-eol

[diff]
	tool = winmerge

	# http://blog.deveo.com/whats-new-in-git-2-11/#experimentalheuristicsgitdiff
	indentHeuristic = on

[difftool]
	prompt = false

[difftool "winmerge"]
	cmd = winmergeu -r -e -u -wl -fr "$LOCAL" "$REMOTE"

[merge]
	tool = winmerge

[mergetool]
	keepBackup = false
	trustExitCode = false

[mergetool "winmerge"]
	# WinMerge w/ 3-way merge support; install with `scoop install winmerge`
	cmd = winmergeu -e -u -wl -wr -fm -dl Ours -dm "$MERGED" -dr Theirs "$LOCAL" "$BASE" "$REMOTE" -o "$MERGED"

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[credential]
	helper = manager
