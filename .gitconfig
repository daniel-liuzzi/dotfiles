[color "diff"]
	whitespace = red reverse

[push]
	# Allows pushing for the first time with just `git push` instead of `git push -u origin HEAD`
	default = current

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
