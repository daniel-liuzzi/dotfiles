[user]
	name = Daniel Liuzzi
	email = dliuzzi@gmail.com

[alias]
	# http://stackoverflow.com/a/7149602
	addnw = !sh -c 'git diff -U0 -w --no-color "$@" | git apply --cached --ignore-whitespace --unidiff-zero -'
	patch = !git --no-pager diff --no-color

[core]
	# editor = atom --wait
	editor = 'C:/Program Files/Sublime Text 3/subl.exe' --new-window --wait
	pager = diff-so-fancy | less --tabs=4 -RFX

[diff]
	tool = winmerge-v2
	### http://blog.deveo.com/whats-new-in-git-2-9-2/#diffs
	##compactionHeuristic = true
	# http://blog.deveo.com/whats-new-in-git-2-11/#experimentalheuristicsgitdiff
	indentHeuristic = on

[difftool]
	prompt = false

[difftool "winmerge-v2"]
	cmd = 'C:/Program Files/WinMerge/WinMergeU.exe' -r -e -u -wl -fr "$LOCAL" "$REMOTE"

[merge]
	tool = winmerge-v2

[mergetool]
	keepBackup = false
	trustExitCode = false

[mergetool "winmerge-v2"]
	cmd = 'C:/Program Files/WinMerge/WinMergeU.exe' -e -u -wl -wr -fm -dl Ours -dm "$MERGED" -dr Theirs "$LOCAL" "$BASE" "$REMOTE" -o "$MERGED"

